{
  "name": "@haaretz/htz-frontend",
  "version": "1.0.0",
  "private": true,
  "description": "",
  "main": "index.js",
  "scripts": {
    "bootstrap": "yarn run clean && yarn run update && lerna run prepare",
    "clean": "lerna clean --yes && rimraf \"packages/*/*/{.jest,.next,dist}\"",
    "docs": "doctoc --title \"**Table of Contents**\" .",
    "flow": "lerna exec --no-bail --ignore @haaretz/htz-react-base -- yarn run flow check",
    "format": "yarn run format:self && yarn run format:packages",
    "format:packages": "lerna exec --no-bail -- yarn run format",
    "format:self": "node packages/libs/htz-react-base/bin/htz-scripts.js format",
    "lint": "yarn run lint:self && yarn run lint:packages",
    "lint:packages": "lerna exec --no-bail -- yarn run lint",
    "lint:self": "node packages/libs/htz-react-base/bin/htz-scripts.js lint",
    "sync": "node scripts/sync.js",
    "update": "lerna bootstrap",
    "update-packages-scripts": "lerna exec --no-bail --loglevel verbose --ignore @haaretz/htz-react-base -- yarn run update-scripts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Haaretz/htz-frontend.git"
  },
  "keywords": [],
  "author": "",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/Haaretz/htz-frontend/issues"
  },
  "homepage": "https://github.com/Haaretz/htz-frontend#readme",
  "engines": {
    "yarn": "^1.0.0"
  },
  "syncDependencies": {
    "packages/libs/htz-react-base": {
      "devDependencies": {
        "react-test-renderer": "^15.6.1"
      },
      "peerDependencies": {
        "react-test-renderer": "^15.6.1 || ^16.0.0-0"
      }
    },
    "packages/{libs/htz-react-base,components/*}": {
      "devDependencies": {
        "react": "^15.6.1",
        "react-dom": "^15.6.1"
      },
      "peerDependencies": {
        "react": "^15.6.1 || ^16.0.0-0"
      }
    },
    "packages/{components,apps}/*": {
      "dependencies": {
        "prop-types": "^15.5.10"
      },
      "devDependencies": {
        "@haaretz/htz-react-base": "^0.1.0",
        "react-test-renderer": "^15.6.1"
      }
    },
    "packages/{apps}/*": {
      "dependencies": {
        "react": "^15.6.1",
        "react-dom": "^15.6.1"
      }
    }
  },
  "workspaces": [
    "packages/*/*"
  ],
  "devDependencies": {
    "cross-spawn": "^5.1.0",
    "doctoc": "^1.3.0",
    "globby": "^6.1.0",
    "lerna": "^2.1.2",
    "rimraf": "^2.6.1",
    "write-pkg": "^3.1.0"
  },
  "dependencies": {}
}
